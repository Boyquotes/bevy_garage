    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'sim-car'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=sim-car",
                    "--package=sim-car"
                ],
                "filter": {
                    "name": "sim-car",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "CARGO_MANIFEST_DIR": "${workspaceFolder}",
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'sim-car'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=sim-car",
                    "--package=sim-car"
                ],
                "filter": {
                    "name": "sim-car",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "CARGO_MANIFEST_DIR": "${workspaceFolder}",
            }
        }
    ]
